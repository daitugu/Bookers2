<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
</div>

<!-- ユーザーの投稿一覧 -->

<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
    <%= image_tag @user.get_profile_image(100,100) %>
      <% end %>
 <%= book.title %>
 <%= book.body  %>

  <p>投稿ユーザー画像</p>
</div>
<% end %>
<%= render "books/form", book: @book %>