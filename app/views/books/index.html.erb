</tr>
<% end %>
</tbody>
</table>



</div>


<%=form_with model: @book do |f| %>
<%= link_to "Update User", edit_user_path(current_user.id) %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <p><%= f.text_area :body %></p>

  <a><%= f.submit 'Create Book' %></a>

<% end %>