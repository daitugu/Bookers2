<p id="notice"></p>
<div class="container">
<div class="row">
<div class="col-sm-12 col-md-8 col-lg-5 px-sm -0 mx-auto">
<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
 <%=form_with model: @book do |f| %>

  <%= f.label :title %><br>
  <%= f.text_field :title, autofocus: true, class:"form-control book_title",autocomplete: "user_title" %><br>
  <%= f.label :body,"Opinion"%><br>
  <%= f.text_area :body, autofocus: true, class:"form-control book_body",autocomplete: "user_Opinion" %><br>
  <%=f.submit 'Update Book', class:"btn btn-success" %><br>
  <% end %>

 <%= link_to "Show", book_path(@book.id) %> | <%= link_to 'Back', books_path %>
</div>
</div>
</div>


