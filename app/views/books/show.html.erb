<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-3">
<div>
  <h2>UserInfo</h2>
    <%= image_tag @user.get_profile_image(100,100) %>
    <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
          </tr>
          <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
          </tr>
      </tbody>
      </table>
    <div class="row">
    <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog" aria=hidden="true"></i>
    <% end %>
    </div>

<h2 class="mt-3">New book</h2>
</div>
<%= render "books/form", book: @book_new %>
</div>
<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
  <table class="table">
    <tbody>
    <tr>
     <td>
    <%= link_to user_path(@user.id)  do %>
    <%= image_tag @user.get_profile_image(100,100) %>
      <% end %>
      <%= link_to user_path(@user.id)  do %><br>
    <%= @user.name %>
    <% end %>
   </td>
  <td>
  <%= link_to book_path(@book.id)  do %>
  <%= @book.title %>
 <% end %>
 </td>
  <td>
   <%= @book.body %>
  </td>
   <td>
   <% if @user.id == current_user.id %>
 <%= link_to 'Edit' , edit_book_path(@book.id), class:"btn btn-sm btn-success edit_book"  %>
  <% end %>
 </td>
  <td>
  <% if @user.id == current_user.id %>
 <%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" ,class:"btn btn-sm btn-danger destroy_book" %>
  <% end %>
 </td>
 </tr>
</tbody>
</table>
</div>
</div>
</div>


